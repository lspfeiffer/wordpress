<root translate="smartslider">
    <params name="imagetype" label="Image_item_settings">
        <param name="image" type="image" label="Image" default=""/>
        <param name="alt" type="text" label="Alt" default="Alternative text for image"/>       
        <param name="title" type="text" label="Title" default=""/>
        <param name="link" type="mixed" label="Link" default="|*|_self" description="">
            <param type="url" label="Link"/>
            <param type="list" label="Target">
                <option value="_self">Self</option>
                <option value="_blank">Blank</option>
            </param>
        </param>
        <param name="size" type="mixed" label="Size" default="100%|*|auto">
            <param type="text" label="Width"/>
            <param type="text" label="Height"/>
        </param>
        <param name="css" type="textarea" label="CSS" default=""/>
        <param name="onmouseenter" type="text" label="Event_on_mouseenter" description="JavaScript_code_to_run_on_the_event" default=""/>
        <param name="onmouseclick" type="text" label="Event_on_mouseclick" description="JavaScript_code_to_run_on_the_event" default=""/>
        <param name="onmouseleave" type="text" label="Event_on_mouseleave" description="JavaScript_code_to_run_on_the_event" default=""/>
        
        <param name="kenburns" type="mixed" label="Ken burns" default="0|*|10000|*|115|*|0-50% 50%|*|0">
            <param type="onoff" label="Enabled" />
            <param type="text" label="Duration" style="width:40px;">
                <unit>ms</unit>
            </param>
            <param type="text" label="Target width" style="width:40px;">
                <unit>%</unit>
            </param>
            <param type="list" label="Snap">
                <option value="lt-0 0">Left-top</option>
                <option value="lt-50% 0">Center-top</option>
                <option value="rt-100% 0">Right-top</option>
                <option value="lt-0 50%">Left-center</option>
                <option value="0-50% 50%">Center-Center</option>
                <option value="rt-100% 50%">Right-center</option>
                <option value="lb-0 100%">Left-bottom</option>
                <option value="lb-50% 100%">Center-bottom</option>
                <option value="rb-100% 100%">Right-bottom</option>
            </param>
            <param type="text" label="Delay" style="width:40px;">
                <unit>ms</unit>
            </param>
        </param>
    </params>
</root>
